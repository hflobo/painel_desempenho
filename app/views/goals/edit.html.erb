<div class="container">
    <h3>Edite o valor da meta</h3>
    <%= render "form", goal: @goal %>
        <div class="my-4">
          <%= link_to "Excluir", goal_path(@goal), method: :delete, data: { confirm: "Você tem certeza?" }, class: "btn btn-primary" %> 
        </div>
    <div class="container">
  <table class="table cores-tb <%= cookies[:theme] %>">
    <thead>
      <tr>
        <th scope="col">Ano</th>
        <th scope="col">Período</th>
        <th scope="col">Valor</th>
        <th scope="col">Indicador</th>
        <th scope="col">Ação</th>
      </tr>
    </thead>
    <tbody>
      <% @goals.each do |goal| %>
      <tr class="<%= goal.indicator_id %>" <% if goal.indicator_id != @goal.indicator_id %> style='display: none;' <% end %>  >
        <th scope="row"><%= goal.ano %></th>
        <td><%= goal.nome_periodo_valor %></td>
        <td><%= goal.valor %></td>
        <td><%= goal.indicator.nome %></td>
        <td><a><%= link_to "Editar", edit_goal_path(goal), class: "tab-link" %><i class="fas fa-edit"></i></a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>