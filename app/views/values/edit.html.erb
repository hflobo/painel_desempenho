<div class="container w-50">
    <h1 class="text-center">Editar o valor ID: <%= @value.id %></h1>
    <%= render "form", value: @value %>
        <div class="my-4">
          <%= link_to "Delete", value_path(@value), method: :delete, data: { confirm: "Você tem certeza?" }, class: "btn btn-primary" %> 
        </div>
    <div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Ano</th>
        <th scope="col">Período</th>
        <th scope="col">Valor</th>
        <th scope="col">Indicador</th>
        <th scope="col">ID</th>
      </tr>
    </thead>
    <tbody>
      <% @values.each do |value| %>
      <tr class="<%= value.indicator_id %>" <% if value.indicator_id != @value.indicator_id %> style='display: none;' <% end %>  >
        <th scope="row"><%= value.ano %></th>
        <td><%= value.periodo %></td>
        <td><%= value.valor %></td>
        <td><%= value.indicator.nome %></td>
        <td><%= value.id %></td>
        <td><a><%= link_to "Editar", edit_value_path(value), class: "a-primary" %><i class="fas fa-edit"></i></a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>