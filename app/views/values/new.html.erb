<div class="container">
  <h3>Cadastre novo valor</h3>
  <%= render "form", value: @value %>
  <div class="my-4">
  <%= link_to 'Voltar', :back, class: "btn btn-primary"%>
  </div>

  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Ano</th>
          <th scope="col">Período</th>
          <th scope="col">Valor</th>
          <th scope="col">Indicador</th>
          <th scope="col">Ação</th>
        </tr>
      </thead>
      <tbody>
        <% @values.each do |value| %>
        <tr class="<%= value.indicator_id %>">
          <th scope="row"><%= value.ano %></th>
          <td><%= value.nome_periodo_valor %></td>
          <td><%= value.valor %></td>
          <td><%= value.indicator.nome %></td>
          <td><a><%= link_to "Editar", edit_value_path(value), class: "a-primary" %><i class="fas fa-edit"></i></a></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="my-4">
  <%= link_to 'Voltar', :back, class: "btn btn-primary"%>
  </div>
</div>