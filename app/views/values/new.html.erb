<div class="container w-50">
    <h1 class="text-center">Cadastrar novo valor</h1>
    <%= render "form", value: @value %>

    <div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Ano</th>
        <th scope="col">Per√≠odo</th>
        <th scope="col">Valor</th>
        <th scope="col">Indicador</th>
        <th scope="col">ID</th>
      </tr>
    </thead>
    <tbody>
      <% @values.each do |value| %>
      <tr class="<%= value.indicator_id %>">
        <th scope="row"><%= value.ano %></th>
        <td><%= value.periodo %></td>
        <td><%= value.valor %></td>
        <td><%= value.indicator.nome %></td>
        <td><%= value.id %></td>
        <td><a><%= link_to "Editar", edit_value_path(value), class: "a-primary" %><i class="fas fa-edit"></i></a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

</div>