<div class="container">

  <h3>Cadastre novo valor</h3>
  <%= render "values/form", value: @value %>

  <div class="my-4">
  <%= link_to 'Voltar', :back, class: "btn btn-primary", data: {turbolinks: 'false'}%>
  </div>

  <div class="container">
    <table class="table cores-tb <%= cookies[:theme] %>">
      <thead>
        <tr class="titulo">
          <th scope="col">Ano</th>
          <th scope="col">Período</th>
          <th scope="col">Valor</th>
          <th scope="col">Indicador</th>
          <th scope="col">Ação</th>
        </tr>
      </thead>
      <tbody>
        <% @values.each do |value| %>
        <tr class="<%= value.indicator_id %>">
          <th scope="row"><%= value.ano %></th>
          <td><%= value.nome_periodo_valor(value.indicator.qtd_apuracoes_ano) %></td>
          <td><%= value.valor %></td>
          <td><%= value.indicator.nome %></td>
          <td>
            <%= link_to edit_value_path(value), class: "a-primary", title: "Editar" do %>
              <i class="far fa-edit"></i>
            <% end %>
            <%= link_to value, method: :delete, title: "Excluir", data: { confirm: 'Tem certeza que quer excluir?' }, class: "a-primary" do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="my-4">
    <%= link_to 'Voltar', :back, class: "btn btn-primary", data: {turbolinks: 'false'} %>
  </div>
</div>