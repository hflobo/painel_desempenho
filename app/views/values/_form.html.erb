<%= simple_form_for(@value) do |f| %>
  <div class="form-inputs">
    <% if !@indicator %>
      <%= f.input :indicator_id, label: "Indicador", label_method: :name_of_method, goal_method: :id, collection: @indicators %>
    <% end %>
    <%= f.input :ano, label: "Ano: " %>
    <%= f.input :periodo, label: "PerÃ­odo: " %>
    <%= f.input :valor, label: "Valor: " %>
  </div>
  <% if @value.id %>
        <%= f.submit 'Alterar', class: "btn btn-success" %>
        <%= link_to 'Excluir', @value, method: :delete,  class: "btn btn-info", data: { confirm: 'Tem certeza que quer excluir?' } %>
      <% else %>
        <%= f.submit 'Criar', class: "btn btn-success" %>
