<div class="container">
<div class="col-xs-12 col-sm-5 col-sm-offset-4">
  <h3>Editar dados do usuário</h3>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :name, label: 'Nome' %>
      <% if current_user.admin %>
        <%= f.input :admin, label: 'Administrador' %>
      <% end %>
      <%= f.input :password, label: 'Nova senha',
                  hint: "deixe em branco se você não quiser alterá-la",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, label: 'Confirme sua nova senha',
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password, label: 'Senha atual',
                  hint: "necessitamos de sua senha atual para confirmarmos a alteração",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Atualizar", class: "btn btn-success" %>
    </div>
  <% end %>
  <br>
  <h3>Cancelar cadastro</h3>

  <p>Descontente? <%= link_to "Cancelar registro", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Retornar", :back, class: "btn btn-success" %>
</div>
</div>
