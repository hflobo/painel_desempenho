<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h3>Faça seu cadastro</h3>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :name, label: 'Nome' %>
          <%= f.input :password, label: 'Senha',
                      required: true,
                      hint: ("#{@minimum_password_length} caracteres, no mínimo" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, label: 'Confirme sua senha',
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Registrar-se", class: "btn btn-success" %>
          <br>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>