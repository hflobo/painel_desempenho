<div class='container' >
  <h2>Alertas Arquivados</h2>
  <div class='notifications'>
    <% @alerts.each do |alert| %>
      <% user = User.find(alert.destinatario_id) %>
      <div class="notification">
        <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" />
        <div class="notification-content">
          <p><small><%= alert.created_at.strftime('%d.%m.%Y %H:%M') %></small></p>
          <p><small><%= alert.indicator.nome %></small></p>
          <p><%= alert.descricao %></p>
          <p>Destinatário: <small style="font-color:blue"><%= user.name %></small> - Ciência: <small>
            <%= "#{alert.data_ciencia ? alert.data_ciencia.strftime('%d.%m.%Y %H:%M') : 'Não confirmada'}" %>
            </small>  -  Providência: <small>
            <%= "#{alert.data_providencia ? alert.data_providencia.strftime('%d.%m.%Y %H:%M') : 'Não adotada'}" %>
            </small></p>
          <p><%= alert.texto_providencia %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
